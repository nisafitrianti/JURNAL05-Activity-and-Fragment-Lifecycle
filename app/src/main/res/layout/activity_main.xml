<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <View
            android:layout_width="1dp"
            android:layout_height="350dp"
            android:background="#727272"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="72dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:id="@+id/view"/>
    <TextView
            android:text="Tim A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/view" app:layout_constraintEnd_toStartOf="@+id/view"
            android:layout_marginEnd="72dp" android:layout_marginRight="72dp"/>
    <TextView
            android:text="Tim B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/view" app:layout_constraintStart_toEndOf="@+id/view"
            android:layout_marginLeft="72dp" android:layout_marginStart="72dp"/>
    <TextView
            android:text="0"
            android:textAlignment="center"
            android:layout_width="101dp"
            android:layout_height="47dp"
            android:id="@+id/tv_score_b"
            android:textSize="36sp"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintEnd_toEndOf="@+id/textView2"/>
    <TextView
            android:text="0"
            android:textAlignment="center"
            android:layout_width="102dp"
            android:layout_height="47dp"
            android:id="@+id/tv_score_a"
            android:textSize="36sp" android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="@+id/textView" app:layout_constraintStart_toStartOf="@+id/textView"
    />
    <Button
            android:text="+3 poin"
            android:layout_width="97dp"
            android:layout_height="43dp"
            android:id="@+id/btn_plus3_b"
            app:layout_constraintStart_toStartOf="@+id/tv_score_b"
            app:layout_constraintEnd_toEndOf="@+id/tv_score_b" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_score_b"/>
    <Button
            android:text="+2 poin"
            android:layout_width="97dp"
            android:layout_height="43dp"
            android:id="@+id/btn_plus2_b"
            app:layout_constraintStart_toStartOf="@+id/btn_plus3_b"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_plus3_b" app:layout_constraintEnd_toEndOf="@+id/btn_plus3_b"/>
    <Button
            android:text="+2 poin"
            android:layout_width="97dp"
            android:layout_height="43dp"
            android:id="@+id/btn_plus2_a"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_plus3_a" app:layout_constraintEnd_toEndOf="@+id/btn_plus3_a"
            app:layout_constraintStart_toStartOf="@+id/btn_plus3_a"/>
    <Button
            android:text="Free Throw"
            android:layout_width="97dp"
            android:layout_height="43dp"
            android:id="@+id/btn_freethrow_b"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/btn_plus2_b"
            app:layout_constraintEnd_toEndOf="@+id/btn_plus2_b" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_plus2_b"/>
    <Button
            android:text="Free Throw"
            android:layout_width="97dp"
            android:layout_height="43dp"
            android:id="@+id/btn_freethrow_a"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/btn_plus2_a"
            app:layout_constraintEnd_toEndOf="@+id/btn_plus2_a"
            app:layout_constraintStart_toStartOf="@+id/btn_plus2_a" android:textSize="12sp"
    />
    <Button
            android:text="+3 Poin"
            android:layout_width="97dp"
            android:layout_height="43dp"
            android:id="@+id/btn_plus3_a" app:layout_constraintStart_toStartOf="@+id/tv_score_a"
            app:layout_constraintEnd_toEndOf="@+id/tv_score_a" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_score_a"/>
    <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_reset" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/view" app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>